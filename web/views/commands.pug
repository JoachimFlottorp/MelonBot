doctype html
html 
    head 
        include ./header.pug
        title= title

        style 
            include /css/html.css
            include /css/commands.css

    body 
        block header

        table(class='basic-table') 
            tr(class='TableHeader')
                th(scope="col") ID
                th(scope="col") Name
                th(scope="col") Description
                th(scope="col") Perm
            
            for command in commands
                tr(key=command.id id='basic-row')
                    th(scope='row')= command.id
                    td= command.name
                    td= command.description
                    td= command.perm